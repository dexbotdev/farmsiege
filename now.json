{
  "routes": [
    {
      "src": "/*",
      "headers": {
        "Feature-Policy": "autoplay 'self'"
      },
      "continue": true
    }
  ],
  "env": {
    "RECAPTCHA_SECRET": "@garden-defense.recaptcha-secret",
    "FIREBASE_PRIVATE_KEY": "@garden-defense.firebase-private-key"
  },
  "functions": {
    "api/*.ts": {
      "memory": 128,
      "maxDuration": 10
    }
  }
}
